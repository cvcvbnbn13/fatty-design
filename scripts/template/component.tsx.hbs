import React, { FC, CSSProperties } from 'react'
import classNames from 'classnames'
import './index.scss'

export interface IProps extends React.HTMLAttributes<HTMLDivElement> {
  type?: 'normal' | 'primary' | 'dashed' | 'text' | 'link'
  className?: string
  size?: 'small' | 'medium' | 'large'
  children?: React.ReactNode
  style?: CSSProperties
  testId?: string
}

const {{componentName}} : FC<IProps> = ({
  className,
  type = 'normal',
  children,
  style,
  testId,
  size = 'medium',
  ...props
}) => {
  const cls = classNames({
    'fatty-{{componentName}}': true,
    [`fatty-{{componentName}}-${size}`]: size,
    [`fatty-{{componentName}}-${type}`]: type,
    [className as string]: !!className,
  })

  return (
    <{{componentName}}  {...props} style={style} className={cls} data-testid={testId}>
      {children}
    </{{componentName}} >
  )
}

export default {{componentName}} 
